{
  "manifest_version": 3,
  "name": "YouTube Audio Control Extension",
  "version": "1.0",
  "description": "Adjust volume and bass for YouTube videos.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}